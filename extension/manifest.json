{
  "manifest_version": 3,
  "name": "Style Assistant",
  "version": "0.1.0",
  "description": "AI-powered personalized style analysis for e-commerce clothing sites",
  "icons": {
    "48": "icons/icon-48.png",
    "96": "icons/icon-96.png"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "https://www.uniqlo.com/*"
  ],
  "background": {
    "scripts": ["dist/background/background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.uniqlo.com/*/products/*"],
      "js": ["dist/content/content.js"],
      "css": ["content/styles.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "style-assistant@example.com"
    }
  }
}
